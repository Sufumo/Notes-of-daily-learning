---
import BlogLayout from '../layouts/BlogLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BlogLayout title="欢迎来到我的博客">
  <h2>最新文章</h2>
  <ul style="list-style: none; padding: 0;">
    {posts.map((post) => (
      <li style="margin-bottom: 1.5rem; padding-bottom: 1.5rem; border-bottom: 1px solid #eee;">
        <h3 style="margin-bottom: 0.5rem;">
          <a href={`/blog/${post.slug}`} style="color: #333; text-decoration: none;">
            {post.data.title}
          </a>
        </h3>
        <p style="color: #666; font-size: 0.9rem; margin-bottom: 0.5rem;">
          {post.data.pubDate.toLocaleDateString('zh-CN')}
        </p>
        <p style="color: #555;">{post.data.description}</p>
      </li>
    ))}
  </ul>
</BlogLayout>

